DROVA_SOCKET_LISTEN=7985

# Single host (legacy mode)
WINDOWS_HOST=192.168.0.10

# Multiple hosts: comma-separated IPs (all share the same credentials)
# WINDOWS_HOSTS=192.168.0.10,192.168.0.11,192.168.0.12

WINDOWS_LOGIN=Administrator
WINDOWS_PASSWORD=VeryStrongPassword

SHADOW_DEFENDER_PASSWORD="ReallyVeryStrongPassword"
SHADOW_DEFENDER_DRIVES="CDE"

# Poll intervals in seconds (defaults: idle=5, active=3)
# POLL_INTERVAL_IDLE=5
# POLL_INTERVAL_ACTIVE=3

# For advanced per-host configuration, use JSON config:
# DROVA_CONFIG=/path/to/config.json
#
# Example config.json:
# {
#   "poll_interval_idle": 5,
#   "poll_interval_active": 3,
